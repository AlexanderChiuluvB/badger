namespace fb;

table TableIndex {
  offsets:[BlockOffset];
  bloom_filter:[ubyte];
  estimated_size:uint32;
  max_version:uint64;
  uncompressed_size:uint32;
  key_count:uint32;
}
root_type TableIndex;

table BlockOffset {
  key:[ubyte];
  offset:uint;
  len:uint;
}
root_type BlockOffset;

table KV {
  key        : [ubyte];
  value      : [ubyte];
  version    : uint64;
  expires_at : uint64;
  user_meta  : ubyte;
  meta       : ubyte;

  // Internal fields.
  stream_id   : uint32;
  stream_done : bool;
}
root_type KV;

table KVList {
  kvs: [KV];
}
root_type KVList;
